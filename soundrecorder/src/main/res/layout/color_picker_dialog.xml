            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b10"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />

            <!-- Row 3 -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b11"
