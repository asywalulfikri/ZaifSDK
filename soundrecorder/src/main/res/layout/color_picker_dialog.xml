                android:id="@+id/b3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />

            <!-- Row 2 -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b6"
