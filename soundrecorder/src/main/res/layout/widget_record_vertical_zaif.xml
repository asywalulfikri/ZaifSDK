<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/llRecordBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivNote"
        android:padding="10dp"
        android:background="@drawable/button_black"
        app:srcCompat="@drawable/baseline_note_add_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name" />



    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ivSong"
        android:padding="10dp"
        android:background="@drawable/button_black"
        app:srcCompat="@drawable/icon_music"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ivDelete"
        android:visibility="gone"
        android:clickable="false"
        android:background="@drawable/button_record_color"
        android:padding="15dp"
        app:srcCompat="@drawable/ic_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name"/>

    <RelativeLayout
        android:id="@+id/rlRecord"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">


        <ImageView
            android:id="@+id/ivRecord"
            android:layout_width="40dp"
            android:layout_marginStart="6dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_record_color"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            app:srcCompat="@drawable/record"
            tools:ignore="DuplicateSpeakableTextCheck" />

    </RelativeLayout>

    <ImageView
        android:layout_marginBottom="5dp"
        android:id="@+id/ivDone"
        android:visibility="gone"
        android:background="@drawable/done"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:id="@+id/ivListRecord"
        android:padding="10dp"
        android:background="@drawable/button_black"
        app:srcCompat="@drawable/saved_song"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ivVolume"
        android:padding="10dp"
        android:background="@drawable/button_black"
        app:srcCompat="@drawable/baseline_volume_down_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name" />


    <TextView
        android:id="@+id/tvTimerView"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:textColor="@color/red_A700"
        android:text="REC â—‰"/>


    <ImageView
        android:layout_marginTop="5dp"
        android:background="@drawable/button_setting_color"
        android:id="@+id/ivSetting"
        android:padding="10dp"
        android:src="@drawable/baseline_settings_white"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</LinearLayout>
